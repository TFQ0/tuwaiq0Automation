{
  "name": "tuwaiq-automation",
  "version": "1.0.0",
  "description": "Automation for siwar website - Tuwaiq Academy",
  "scripts": {
    "test": "cypress run",
    "test:headed": "cypress run --headed",
    "test:headed:chrome": "cypress run --headed --browser chrome --no-exit",
    "test:login": "cypress run --headed --browser chrome --spec 'cypress/e2e/1-Login/**'",
    "test:login:api": "cypress run --spec 'cypress/e2e/1-Login/2-login-api.cy.js'",
    "test:ci": "cypress run --spec 'cypress/e2e/**/*-api.cy.js'",
    "test:chrome": "cypress run --browser chrome",
    "test:firefox": "cypress run --browser firefox",
    "test:edge": "cypress run --browser edge",
    "cypress:open": "cypress open",
    "report:open": "start cypress/reports/index.html"
  },
  "devDependencies": {
    "axe-core": "^4.11.0",
    "cypress": "^15.5.0",
    "cypress-audit": "^1.1.0",
    "cypress-axe": "^1.7.0",
    "cypress-mochawesome-reporter": "^4.0.2"
  }
}
